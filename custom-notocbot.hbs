{{!< default}}

<main id="main post-wrapper">

  {{#post}}
  <!-- Post Content Section -->
  <article class="prose-invert prose-lg post-content text-light">
    {{#is "page"}}
      {{#if @page.show_title_and_feature_image}}
        <h1 class="text-4xl text-center">{{title}}</h1>
        {{> "feature-image"}}
      {{/if}}
      {{!-- {{> social-share}} --}}
    {{/is}}

    {{#is "post"}}
    <h1 class="text-4xl text-center">{{title}}</h1>
    {{> social-share}}

    <section class="mb-8 text-center post-meta">
        <div class="space-x-2 tags">
          {{#foreach tags}}
            <a href="{{url}}" class="px-2 py-1 text-sm rounded bg-dark hover:bg-highlight">{{name}}</a>
          {{/foreach}}
        </div>
      {{> "feature-image" }}
      <div class="mb-2 text-xs text-light">
        {{#foreach authors}}
          {{t "Author"}}: <a href="{{url}}" class="hover:underline" rel="author" >{{name}}</a> 
        {{/foreach}} | {{t "Published at"}} {{date published_at format="d MMMM YYYY"}}
      </div>
    {{/is}}
    </section>

    <!-- Main Post Content -->
      {{#is "post"}}
    <section class="grid grid-cols-1 gap-4 lg:grid-cols-1 lg:gap-8">
      <div class="lg:col-span-2 pr-4 contenido">
      {{else}}
        <section class="lg:col-span-2 pr-4 contenido">
      {{/is}}
      {{{content}}}
      </div>
    </section>


{{#is "post"}}
<h2>{{t "Related content"}}</h2>
{{#get "posts" include="authors" filter="id:-{{id}}+tags:[{{primary_tag.slug}}]" limit="3" as |next|}}
{{#if next}}
<section id="post-list">
      {{#foreach next}}
      {{> "post-card"}}
      {{/foreach}}
</section>
{{/if}}
{{/get}}

    <section id="comments">
        {{#if comments}}
        <div class="gh-comments gh-canvas">
            {{#if @member}}
                {{comments count=false mode=dark title="Opinions?"}}
            {{else}}
            {{> "social-sso"}}
            {{comments count=false mode=dark title=" "}}
            {{/if}}
        </div>
        {{/if}}
    </section>
        {{> "components/author-box"}}


    {{/is}}
  </article>

  {{/post}}

</main>
