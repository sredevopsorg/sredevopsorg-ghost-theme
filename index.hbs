{{!< default}}
{{!--  --}}

<div class="container mx-auto p-6 overflow-y-scroll overflow-x-scroll md:pl-32">
<!-- Tag Navigation -->
<div class="space-x-4 mb-6 overflow-x-scroll h-full flex">
    {{#get "tags" include="count.posts" order="count.posts desc" limit="50"}}
        <ul class="flex gap-4 items-center">
            <span class="text-light">Tags:</span>
            {{#foreach tags}}
            <li class="text-center">
                <a href="{{url}}">{{name}}</a>
            </li>
            {{/foreach}}
        </ul>
    {{/get}}
</div>

    <!-- Post Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {{#foreach posts}}
        {{!-- {{#unless @first}} --}}
        <div class="post-item bg-dark p-4 rounded-2xl">
            <a href="{{url absolute="true"}}">
                <img src="{{feature_image}}" alt="{{title}}" class="mb-4">
                <h3 class="text-xl font-bold">{{title}}</h3></a>
            <p class="text-gray-400">{{excerpt}}</p>
            <p class="text-gray-500"><a href="{{url absolute="true"}}">{{t "Read More"}}</a></p>
        </div>
        {{!-- {{/unless}} --}}
        {{/foreach}}
        {{!-- Pagination --}}
    </div>
        {{pagination prev='<<<'}}
</div>
