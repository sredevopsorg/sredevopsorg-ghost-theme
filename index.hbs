{{!< default}}
<main id="main" class="container pt-6 pb-6 mx-auto md:pl-64">
{{> "tags-nav" }}
{{#is "tag" }}
{{#tag}}
    <h1 class="pb-4 text-4xl">{{name}}</h1>
    {{#if description}}
    <h2 class="pb-4 text-xl">{{description}}</h2>
    {{/if}}
{{/tag}}
{{/is}}

{{#is "author" }}
    <h1 class="pb-4 text-4xl"><a href="{{url absolute="true"}}" rel="author">{{name}}</a></h1>
    <h2 class="pb-4 text-xl">{{bio}}</h2>

{{/is}}

{{> "posts-list" }}

</main>
