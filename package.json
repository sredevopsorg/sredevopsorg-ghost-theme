{
    "name": "sredevopsorg-ghost-theme",
    "description": "Ghost v6 Theme made for SREDevOps.org (https://www.sredevops.org) based on Tailwind CSS v3, responsive, dark color schema, SVG icons, sidebar + footer navgation, customized tags and recommendations pages.",
    "demo": "https://www.sredevops.org",
    "version": "1.4.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "scripts": {
        "dev": "rm -fv ./assets/build/* && gulp",
        "build": "gulp build",
        "test": "gscan .",
        "test:dev": "npx gscan --verbose .",
        "test:ci": "gscan --fatal --verbose ."
    },
    "author": {
        "name": "Nicolas Georger",
        "email": "info@sredevops.org",
        "url": "https://sredevops.org"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Dark",
            "Magazine",
            "Sidebar navigation"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/sredevopsorg/sredevopsorg-ghost-theme"
    },
    "bugs": "https://github.com/sredevopsorg/sredevopsorg-ghost-theme/issues",
    "contributors": [
        "https://github.com/sredevopsorg/sredevopsorg-ghost-theme/graphs/contributors"
    ],
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.11",
        "@tailwindcss/typography": "^0.5.19",
        "autoprefixer": "^10.4.22",
        "cssnano": "7.1.2",
        "gulp": "^5.0.1",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "postcss": "^8.5.6",
        "postcss-import": "^16.1.1",
        "pump": "3.0.3",
        "tailwindcss": "^3.4.19"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not op_mini all",
        "not IE 11"
    ],
    "config": {
        "posts_per_page": 12,
        "card_assets": true,
        "custom": {
            "background_color": {
                "type": "color",
                "default": "#0f172a",
                "description": "Background color for the theme",
                "group": "homepage"
            },
            "lazy_images": {
                "type": "boolean",
                "default": false,
                "description": "Enable lazy loading for images",
                "group": "homepage"
            },
            "share_buttons": {
                "type": "boolean",
                "default": true,
                "description": "Enable share buttons on posts",
                "group": "post"
            },
            "show_langs": {
                "type": "boolean",
                "default": false,
                "description": "Enable language menu in sidebar",
                "group": "homepage"
            },
            "show_sso": {
                "type": "boolean",
                "default": false,
                "description": "Enable SSO menu in sidebar",
                "group": "homepage"
            }
        },
        "image_sizes": {
            "xs": {
                "width": 100
            },
            "s": {
                "width": 220
            },
            "m": {
                "width": 300
            },
            "l": {
                "width": 600
            },
            "xl": {
                "width": 900
            }
        }
    }
}
