{{#if feature_image}}
    <figure>
        <picture>
            <source srcset="{{img_url feature_image format="webp" size="xl"}}" media="(min-width: 1200px)">
            <source srcset="{{img_url feature_image format="webp" size="l"}}" media="(min-width: 960px)">
            <source srcset="{{img_url feature_image format="webp" size="m"}}" media="(min-width: 600px)">
            <source srcset="{{img_url feature_image format="webp" size="s"}}" media="(min-width: 320px)">
            <source srcset="{{img_url feature_image format="webp" size="xs"}}" media="(min-width: 180px)">
            <img src="{{img_url feature_image format="webp" size="m"}}" alt="{{title}}"
                {{#is "home, index, tag, author, paged" }}
                    class="object-cover w-full h-56 "
                {{else}}
                    class="object-fill"
                {{/is}}
            >
        </picture>
        {{#unless "post" }}
            {{#if feature_image_caption}}
                <figcaption>{{feature_image_caption}}</figcaption>
            {{/if}}
        {{/unless}}

    </figure>
{{/if}}