    <!-- Post Grid -->
    <section id="post-list">
        {{#foreach posts}}
        <article id="{{slug}}">   
            <a href="{{url absolute="true"}}" alt="{{title}}">
            <img alt="{{title}}"
                src="{{img_url feature_image size='m' format='webp'}}"
                width="220px"
                {{#if @custom.lazy_images}} loading="lazy"{{/if}} />
            </a>
            <div>

                <h1>
                    <a href="{{url absolute="true"}}">
                        {{title}}
                    </a>
                </h1>

                <p class="mt-2 text-sm line-clamp-3 text-light">
                    {{excerpt}}
                </p>

                <a href="{{url absolute="true"}}" class="inline-flex items-center gap-1 mt-4 text-sm font-medium group" alt="{{title}}" rel="bookmark">
                    <h2 class="block transition-all group-hover:ms-0.5" alt="{{title}}">
                        Read the full post &rarr;
                    </h2>
                </a>
            </div>
        </article>
        {{/foreach}}
    </section>

    <!-- Pagination -->
    <section id="pagination" class="flex justify-center mt-6 pagination">
        <ul class="flex items-center space-x-4">
            <!-- Previous Page Link -->
            {{#if pagination.prev}}
            <li>
                <a href="{{page_url pagination.prev}}" class="px-3 py-1 rounded-xlg text-lighter hover:bg-highlight bg-darker">&larr; Newer Posts</a>
            </li>
            {{/if}}


            <!-- Next Page Link -->
            {{#if pagination.next}}
            <li>
                <a href="{{page_url pagination.next}}" class="px-3 py-1 rounded-xlg text-lighter hover:bg-highlight bg-darker">Older posts &rarr;</a>
            </li>
            {{/if}}
        </ul>
    </section>
