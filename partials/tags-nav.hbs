
<!-- Tag Navigation -->
<div class="flex h-full mb-6 overflow-x-scroll space-x-4">
    <ul class="flex items-center gap-4">
        <span class="text-light">Tags:</span>
        {{#get "tags" include="count.posts" order="count.posts desc" limit="50"}}
            {{#foreach tags}}
            <li class="text-center">
                <a href="{{url}}" 
                class="text-xs px-4 py-2 rounded-2xl tag tag-{{id}} {{slug}} {{#has tag="slug"}}bg-highlight{{else}}bg-dark{{/has}} hover:bg-highlight transition-colors">
                    {{name}}
                </a>
            </li>
            {{/foreach}}
        {{/get}}
    </ul>
</div>

