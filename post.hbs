{{!< default}}

<main id="main post-wrapper">

  {{#post}}
  <!-- Hero Section with Feature Image -->




  <!-- Post Content Section -->
  <article class="max-w-full px-4 mx-auto post-content prose-invert prose-lg text-light md:px-32">
      <h1 class="text-4xl font-bold leading-tight md:text-5xl">{{title}}</h1>
    <section class="mb-8 text-center post-meta">
      <div class="mb-2 text-sm text-light">
        {{#foreach authors}}
          <a href="{{url}}" class="hover:underline">{{name}}</a> 
        {{/foreach}} 
        â€¢ {{date published_at format="MMMM D, YYYY"}}
      </div>
      {{#if tags}}
        <div class="tags space-x-2">
          {{#foreach tags}}
            <a href="{{url}}" class="px-2 py-1 text-sm rounded bg-dark hover:bg-highlight">{{name}}</a>
          {{/foreach}}
        </div>
      {{/if}}
    </section>

    <!-- Main Post Content -->
    <section>
      {{{content}}}
    </section>

    <!-- Author Box -->
    <section class="flex items-center mt-12 author-box">
      {{#foreach authors}}
      <div class="flex items-center author space-x-4">
        <img src="{{img_url profile_image size="s" format="webp"}}" alt="{{name}}" class="w-12 h-12 rounded-full">
        <div>
          <h3 class="text-lg font-bold">{{name}}</h3>
          <p class="text-sm text-light">{{bio}}</p>
        </div>
      </div>
      {{/foreach}}
    </section>
  </article>

  {{/post}}

</main>
